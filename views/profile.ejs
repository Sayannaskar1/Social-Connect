<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - <%= user.username %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #F8F9FA;
        }
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }
        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        .post-card {
            transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), box-shadow 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }
        .post-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        }
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 100;
        }
        .modal-content {
            background-color: #fff;
            padding: 2rem;
            border-radius: 1rem;
            max-width: 90%;
            width: 400px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }
    </style>
</head>
<body class="text-gray-900">

    <!-- Header and Navigation -->
    <header class="p-4 flex justify-between items-center bg-white shadow-md">
        <h1 class="text-2xl font-extrabold text-blue-600 tracking-wide">Social-Connect</h1>
        <a class="bg-red-600 rounded-full px-5 py-2 font-semibold text-sm text-white hover:bg-red-700 transition-colors" href="/logout">Log out</a>
    </header>

    <div class="container mx-auto p-6 md:p-10">
        
        <!-- User Profile Section -->
        <div class="flex flex-col md:flex-row items-center md:items-start gap-6 md:gap-10 mb-12 bg-white p-8 rounded-2xl shadow-xl">
            <div class="relative w-24 h-24 sm:w-32 sm:h-32 flex-shrink-0">
                <div class="rounded-full w-full h-full overflow-hidden border-4 border-blue-500 shadow-xl">
                    <img
                        class="w-full h-full object-cover"
                        src="<%= user.profilepicture && user.profilepicture !== 'default.jpg' ? `/images/upload/${user.profilepicture}` : '/images/upload/default.jpg' %>"
                        alt="<%= user.username %>'s profile picture"
                        onerror="this.onerror=null;this.src='/images/upload/default.jpg';"
                    >
                </div>
                <button id="openModalBtn" class="absolute bottom-0 right-0 p-2 bg-blue-500 text-white rounded-full border-2 border-white shadow-lg transform hover:scale-110 transition-transform">
                    <i class="ri-camera-line text-lg"></i>
                </button>
            </div>
            <div class="text-center md:text-left">
                <h1 class="text-3xl sm:text-5xl font-extrabold text-gray-900 leading-tight">
                    Hello, <span class="text-yellow-600"><%= user.name %></span> 
                </h1>
                <p class="text-gray-500 mt-2 text-lg">@<%= user.username %></p>
            </div>
        </div>

        <!-- Post Creation Form -->
        <div class="bg-white rounded-2xl p-6 sm:p-8 mb-12 shadow-inner border border-gray-200">
            <h2 class="text-2xl font-bold mb-4 text-gray-800">What's on your mind?</h2>
            <form action="/post" method="post" class="flex flex-col gap-4">
                <textarea
                    placeholder="Share your thoughts..."
                    class="w-full h-24 p-4 bg-gray-100 border border-gray-300 rounded-xl outline-none text-gray-800 placeholder-gray-500 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 resize-none transition-colors"
                    name="content"
                    rows="4"
                ></textarea>
                <button
                    type="submit"
                    class="mt-2 self-end px-8 py-3 bg-gradient-to-r from-yellow-500 to-yellow-600 text-white font-bold rounded-full shadow-lg hover:from-yellow-600 hover:to-yellow-700 transition-all duration-300 transform hover:-translate-y-1 hover:scale-105"
                >
                    <i class="ri-send-plane-fill mr-2"></i> Post
                </button>
            </form>
        </div>

        <!-- User Posts Section -->
        <h3 class="text-3xl font-bold mb-6 text-gray-800">Your Recent Posts:</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (user.posts && user.posts.length > 0) { %>
                <% user.posts.reverse().forEach((post)=>{%>
                    <div class="post-card flex flex-col justify-between rounded-2xl bg-white border border-gray-200 p-6 shadow-md">
                        <div>
                            <p class="text-sm text-gray-600 leading-relaxed mb-4"><%= post.content %></p>
                        </div>
                        <div class="flex items-center justify-between text-sm text-gray-500 mt-auto pt-4 border-t border-gray-200">
                            <p class="flex items-center gap-2">
                                <i class="ri-heart-line"></i> <span><%= post.likes.length %> likes</span>
                            </p>
                            <div class="flex gap-4">
                                <% if(post.likes.indexOf(user._id) == -1){%>
                                    <a class="text-blue-600 hover:text-blue-500 transition-colors" href="/like/<%= post._id %>">
                                        <i class="ri-heart-line"></i>
                                    </a>
                                <% } else {%>
                                    <a class="text-red-500 hover:text-red-400 transition-colors" href="/like/<%= post._id %>">
                                        <i class="ri-heart-fill"></i>
                                    </a>
                                <%}%>

                                <% if(post.user.toString() === user._id.toString()){%>
                                    <a class="text-yellow-600 hover:text-yellow-500 transition-colors" href="/edit/<%= post._id %>">
                                        <i class="ri-edit-line"></i>
                                    </a>
                                <%}%>
                            </div>
                        </div>
                    </div>
                <% })%>
            <% } else { %>
                <!-- Empty state UI -->
                <div class="col-span-full text-center py-16 text-gray-400 border border-dashed border-gray-300 rounded-xl">
                    <i class="ri-leaf-line text-6xl mb-4"></i>
                    <p class="text-xl font-semibold">You haven't posted anything yet.</p>
                    <p class="mt-2">Share your thoughts using the form above!</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Upload Profile Picture Modal -->
    <div id="uploadModal" class="modal-overlay hidden">
        <div class="modal-content relative">
            <button id="closeModalBtn" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition-colors">
                <i class="ri-close-line text-2xl"></i>
            </button>
            <h2 class="text-xl font-bold mb-6 text-center text-gray-800">Upload Profile Picture</h2>
            <form id="uploadForm" action="/upload" autocomplete="off" enctype="multipart/form-data" method="post" class="flex flex-col items-center">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg text-center text-sm animate-pulse mb-6 w-full"><%= error %></div>
                <% } %>
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg text-center text-sm animate-pulse mb-6 w-full"><%= success %></div>
                <% } %>
                <% if (typeof csrfToken !== 'undefined') { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>

                <input id="bal" name="bal" type="file" class="hidden" accept="image/*" required>
                
                <!-- This button now acts as the visual file selector -->
                <button type="button" id="file-select-btn" class="flex items-center justify-center w-full h-16 border-2 border-dashed rounded-lg cursor-pointer bg-gray-50 border-gray-300 hover:bg-gray-100 transition-colors px-4">
                    <i class="ri-image-add-line text-xl mr-3"></i>
                    <span id="file-name" class="text-gray-500 font-semibold">Click to select an image</span>
                </button>
                
                <button
                    type="submit"
                    class="w-full mt-6 bg-gradient-to-r from-blue-500 to-blue-600 px-8 py-3 rounded-lg text-white font-bold text-lg shadow-lg hover:from-blue-600 hover:to-blue-700 transition-all duration-300 transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"
                >
                    Upload
                </button>
            </form>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const openModalBtn = document.getElementById('openModalBtn');
            const closeModalBtn = document.getElementById('closeModalBtn');
            const uploadModal = document.getElementById('uploadModal');
            const fileInput = document.getElementById('bal');
            const fileNameDisplay = document.getElementById('file-name');
            const fileSelectBtn = document.getElementById('file-select-btn');
            const uploadForm = document.getElementById('uploadForm');

            if(openModalBtn && closeModalBtn && uploadModal) {
                openModalBtn.addEventListener('click', function() {
                    uploadModal.style.display = 'flex';
                });
                
                closeModalBtn.addEventListener('click', function() {
                    uploadModal.style.display = 'none';
                });
                
                uploadModal.addEventListener('click', function(e) {
                    if (e.target === uploadModal) {
                        uploadModal.style.display = 'none';
                    }
                });

                fileSelectBtn.addEventListener('click', function() {
                    fileInput.click();
                });

                fileInput.addEventListener('change', function(e) {
                    if (e.target.files && e.target.files[0]) {
                        fileNameDisplay.textContent = e.target.files[0].name;
                        fileSelectBtn.classList.add('border-blue-500', 'bg-blue-50');
                    } else {
                        fileNameDisplay.innerHTML = 'Click to select an image';
                        fileSelectBtn.classList.remove('border-blue-500', 'bg-blue-50');
                    }
                });
                
                // Reset form on modal close
                uploadModal.addEventListener('click', function(e) {
                    if (e.target === closeModalBtn || e.target === uploadModal) {
                        uploadForm.reset();
                        fileNameDisplay.innerHTML = 'Click to select an image';
                        fileSelectBtn.classList.remove('border-blue-500', 'bg-blue-50');
                        // Revert success/error messages, if any
                        const successMessage = uploadForm.querySelector('.bg-green-100');
                        const errorMessage = uploadForm.querySelector('.bg-red-100');
                        if (successMessage) successMessage.style.display = 'none';
                        if (errorMessage) errorMessage.style.display = 'none';
                    }
                });
            }
        });
    </script>
</body>
</html>
